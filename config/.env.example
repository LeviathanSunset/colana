# 环境变量配置文件
# 复制到 .env 文件中使用

# Bot 基础配置
TELEGRAM_TOKEN="YOUR_BOT_TOKEN_HERE"
TELEGRAM_CHAT_ID="YOUR_CHAT_ID_HERE"
MESSAGE_THREAD_ID="YOUR_THREAD_ID_HERE"

# 代理配置 (服务器通常不需要)
PROXY_ENABLED=false
HTTP_PROXY=http://127.0.0.1:10808
HTTPS_PROXY=http://127.0.0.1:10808

# 分析参数
TOP_HOLDERS_COUNT=100
RANKING_SIZE=30
DETAIL_BUTTONS_COUNT=30
CLUSTER_MIN_COMMON_TOKENS=2
CLUSTER_MIN_ADDRESSES=2
CLUSTER_MAX_ADDRESSES=50

# 安全配置
ALLOWED_USERS=user1,user2,user3
ALLOWED_CHATS=-1002760368002

# 日志级别
LOG_LEVEL=INFO

# 使用说明:
# MESSAGE_THREAD_ID - 可选，指定推送到的Topic ID
# 如果不设置，消息将发送到群组主频道
# 使用 /topicid 命令可以获取当前Topic的ID
